//!终端命令设置
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "mingw32-make",
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "make"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "make"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "build & run",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "'mingw32-make run'"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "'make run'"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "'make run'"
                ]
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "'mingw32-make clean'"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "'make clean'"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "'make clean'"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "test-build",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "g++",
                    "-g",
                    "${workspaceFolder}/test/src/${fileBasename}",
                    "-I",
                    "${workspaceFolder}/test/include",
                    "-o",
                    "${workspaceFolder}/out/${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "g++",
                    "-g",
                    "${workspaceFolder}/test/src/${fileBasename}",
                    "-I",
                    "${workspaceFolder}/test/include",
                    "-o",
                    "${workspaceFolder}/out/${fileBasenameNoExtension}"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "g++",
                    "-g",
                    "${workspaceFolder}/test/src/${fileBasename}",
                    "-I",
                    "${workspaceFolder}/test/include",
                    "-o",
                    "${workspaceFolder}/out/${fileBasenameNoExtension}"
                ]
            },
            "problemMatcher": []
        },
